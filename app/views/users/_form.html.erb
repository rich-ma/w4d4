<% action_url = user.persisted? ? new_session_url : users_url %>
<% text = user.persisted? ? 'Log-In' : 'Sign-Up' %>



<form action="<%= action_url %>" method="post">

  <label for="email">E-mail: </label>
  <input id="email"
  type="text"
  name="user[email]"
  value="<%= @user.email %>"><br>

  <label for="password">Password: </label>
  <input id="password"
  type="password"
  name="user[password]"
  value="<%= @user.password %>"><br>

  <input type="submit" value= "<%= text %>">

</form>
